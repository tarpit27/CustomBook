<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.arpit.servlets.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.arpit.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Posts</servlet-name>
        <servlet-class>com.arpit.servlets.Posts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProfile</servlet-name>
        <servlet-class>com.arpit.servlets.SearchProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessageSend</servlet-name>
        <servlet-class>com.arpit.servlets.MessageSend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadProfile</servlet-name>
        <servlet-class>com.arpit.servlets.UploadProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadPost</servlet-name>
        <servlet-class>com.arpit.servlets.UploadPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.arpit.servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Posts</servlet-name>
        <url-pattern>/Posts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProfile</servlet-name>
        <url-pattern>/SearchProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageSend</servlet-name>
        <url-pattern>/MessageSend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadProfile</servlet-name>
        <url-pattern>/UploadProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadPost</servlet-name>
        <url-pattern>/UploadPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
